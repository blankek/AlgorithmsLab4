<Window x:Class="AlgSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgSort"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
            <RadioButton Name="InsertionRadio" Content="Insertion Sort" IsChecked="True" Height="20" />
            <RadioButton x:Name="RadixRadio" Content="Radix Sort" Height="20" />
            <Button x:Name="SortButton" Content="Sort" Height="30" Click="SortButton_Click" Width="100" />
        </StackPanel>
        <TextBox Name="ResultTextBox" Margin="10,33,262,236" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True" />
        <TextBox Name="FrequencyTextBox" Margin="10,270,262,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True" />
        <TextBlock Name="TimeTextBlock" Margin="564,33,49,277" FontWeight="Bold" />
    </Grid>
</Window>
